{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "include": ["./src/**/*", "./src/types/*", "./types/**/*"],
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "out",
      "public",
      "static",
      "coverage",
      "cypress",
    ],
  }
}